
    <div class="bg">
      <div class="bg-img festival"></div>
      <div class="bg-img dj"></div>
      <div class="bg-img rock"></div>
      <div class="bg-img classical"></div>
      <div class="bg-img jazz"></div>
    </div>

<div class="container">
  <div class="row intro">
    <div class="span8 offset2 intro-box">
      <div class="form-background">

        <h1 class="title"> Locate. Listen. Live. </h1>

        <h3 id="description-text">Audiogasm connects you to the live music playing in your area that you want to see. Pick a location, date range, and desired music genre, and Audiogasm will do the rest, letting you listen to the matching artists playing nearby, with links to buy tickets to any gigs that you like the sound of. Simple!  </h3>

        <div class='user_input'>

          <%= form_tag(search_path, method: 'get') do %>
            <div class='form-space location_input'>
              <%= label_tag "Where do you want to go out? " %>
              <%= text_field_tag 'location' %> 
            </div>

            <div class='form-space date_input'>
              <%= label_tag "When do you want to go out?" %>
              <div>
                <div class="inline">
                  <div class="from-to">
                    <%= label_tag "From: " %>
                  </div>
                    <%= text_field_tag 'from' %>
                </div>
              </div>
              <div>
                <div class="inline">
                  <div class="from-to">
                    <%= label_tag "To: " %>
                  </div>
                    <%= text_field_tag 'to' %>
                </div>
              </div>
            </div>

            <div class='form-space genre_input'>
              <%= label_tag "What music are you in to? " %>
              <%= select_tag 'genre', options_for_select(["Alternative Rock", "Blues", "British Blues", "British Pop", "British Folk", "Classical", "Dance Pop", "Disco", "Easy Listening", "Folk", "Grunge", "Hard Rock", "Hip Hop", "Jazz", "Pop", "Pop Rock", "Progressive Rock", "Punk", "Rap", "R&B", "Rock", "Soul"], "Pop" ), :multiple => false %>
            </div>

            <div class="button submit_input">
              <%= submit_tag "Make me a playlist" %>
            </div>

          <% end %>
        </div>  <!--close user_input class -->    
  
      </div> <!-- close form-background class-->
        <div class="row started">
          <div class="get-started">
            <h4 class="started-text">Get started</h4>
            <i class="icon-arrow-down icon-large"></i>
          </div>
        </div> <!--close row started class -->
    </div> <!--close span8 offset2 intro-box class -->
  </div> <!--close row intro class -->
</div> <!--close container class -->


